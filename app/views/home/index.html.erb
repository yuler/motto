<% if @quote.present? %>
<div class="px-8 border rounded">
  <p class="text-2xl"><%= @quote.content %></p>
  <p class="flex justify-end gap-2">
    <span>--</span>
    <%= @quote.author %>
  </p>
  <%= image_tag @quote.poster %>
</div>
<% else %>
  <%= link_to "Create a new quote", new_quote_path, class: "text-blue-500" %>
<% end %>
