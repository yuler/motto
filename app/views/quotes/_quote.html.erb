<div class="h-40 flex border rounded overflow-hidden">
  <%= image_tag quote.poster, class: "!m-0 !w-40 !h-40 object-scale-down border-r" %>
  <div class="flex-1 p-4 flex flex-col justify-between">
    <p class="!m-0 text-xl"><%= quote.content %></p>
    <p class="!m-0 flex items-center justify-end gap-2 text-sm">
      <span>--</span>
      <%= quote.author %>
    </p>
  </div>
</div>

<div class="flex items-baseline justify-between">
  <div>
    <span class="text-xs text-gray-500"><%= quote.created_at %></span>
  </div>
  <div>
    <%= link_to "Edit", edit_quote_path(quote) %>
    <%= link_to "Destroy", quote, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
  </div>
</div>